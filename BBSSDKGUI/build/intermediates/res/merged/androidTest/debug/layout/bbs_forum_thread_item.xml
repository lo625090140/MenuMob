<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bbs_forum_thread_list_item_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#ADADAD"
        android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/llPic"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/aivPic1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/aivPic2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/aivPic3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#F5F5F7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/aivAvatar"
            android:layout_width="@dimen/bbs_forum_thread_list_item_avatar_size"
            android:layout_height="@dimen/bbs_forum_thread_list_item_avatar_size"/>

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#ADADAD"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textColor="#ADADAD"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCommentCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/bbs_ic_comment"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/bbs_ic_comment"
            android:gravity="top"
            android:includeFontPadding="false"
            android:textColor="#ADADAD"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>